{
  "builds": [
    {
      "src": "onlinequiz/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" },
      "env": {
        "DJANGO_SETTINGS_MODULE": "onlinequiz.settings.production"
      }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "scripts": {
    "postbuild": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
  }
}
